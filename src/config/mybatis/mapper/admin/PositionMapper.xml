<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.admin.PositionDao">
	<!-- 职务添加操作 -->
	<insert id="add" parameterType="com.ischoolbar.programmer.entity.admin.Position">		
		insert into `position`(poid,chineseName,englishName,peopleNum) values(null,#{chineseName},#{englishName},0)
	</insert>
	<!-- 获取所有职务信息 -->
	<select id="findAll" resultType="com.ischoolbar.programmer.entity.admin.Position">
		select * from `position`
	</select>
	<!-- 通过id获取职务名称 -->
	<select id="findNameById" resultType="String">
		select chineseName from `position` where poid = #{poid}
	</select>
	<!-- 通过名称获取职务id -->
	<select id="findIdByName" resultType="Long">
		select poid from `position` where chineseName = #{chineseName}
	</select>
	<!-- 通过id加职务人数 -->
	<update id="addNumById" parameterType="Long">
		update `position` set peopleNum=peopleNum+1 where poid = #{poid}
	</update>
	<!-- 通过id减职务人数 -->
	<update id="subNumById" parameterType="Long">
		update `position` set peopleNum=peopleNum-1 where poid = #{poid}
	</update>
	<!-- 职务删除操作 -->
	<delete id="delete" parameterType="Long">
		delete from position where poid =${value}
	</delete>
</mapper>