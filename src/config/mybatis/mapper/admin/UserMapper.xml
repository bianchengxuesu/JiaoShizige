<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.admin.UserDao">
	<insert id="add" parameterType="com.ischoolbar.programmer.entity.admin.User">
		insert into user(id,username,password,rid) values(null,#{username},#{password},1);
	</insert>
	<!-- 通过id查询用户信息 -->
	<select id="findUserByUsername" parameterType="String" resultType="User">
		select * from user where username =#{username}
	</select>
	<!-- 通过用户名查询id -->
	<select id="findIdByUsername" parameterType="String" resultType="Long">
		select id from user where username =#{username}
	</select>
	<!-- 用户删除操作 -->
	<delete id="delete" parameterType="Long">
		delete from user where id =${value}
	</delete>
</mapper>