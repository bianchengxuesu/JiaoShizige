<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.admin.ZAcademicProjectDao">
	<!-- 插入学术项目操作 -->
	<insert id="add" parameterType="com.ischoolbar.programmer.entity.admin.AcademicProject">
		insert into 
		academic_project(academic_project_id,
				project_cycle,
				approve_year,
				department,
				teacher_name,
				project_name,
				category,
				level,
				funding) 
		values(#{academic_project_id},
				#{project_cycle},
				#{approve_year},
				#{department},
				#{teacher_name},
				#{project_name},
				#{category},
				#{level},
				#{funding})
	</insert>
	<!-- 获取所有学术项目信息 -->
	<select id="findAll" resultType="com.ischoolbar.programmer.entity.admin.AcademicProject">
		select * from academic_project
	</select>
	<!-- id查询信息 -->
	<select id="queryById" resultType="com.ischoolbar.programmer.entity.admin.AcademicProject" parameterType="long">
		select * from academic_project where academic_project_id=#{academic_project_id}
	</select>
</mapper>